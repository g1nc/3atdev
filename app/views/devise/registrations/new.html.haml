.col-lg-12
  .alert.alert-info
    Welcome to Application. Please Register

.col-lg-8.col-lg-offset-2
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    = devise_error_messages!

    .form-group
      = f.label 'Login', class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Login or Email'

    .form-group
      = f.label :email, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email'

    .form-group
      = f.label :password, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password'

    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit 'Register', class: 'btn btn-default submit-btn'

    .form-group
      .col-sm-offset-2.col-sm-10
        Wait! I already have account!
        = link_to 'Login', new_user_session_path


